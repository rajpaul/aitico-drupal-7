 */
function aitico_ui_form_user_login_alter(&$form, &$form_state, $form_id) {
    $form['actions']['submit']['#suffix'] = '&nbsp;&nbsp;&nbsp;' . l(t('I forgot my password'), 'user/password');

    return $form;
}